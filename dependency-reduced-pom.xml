    <h2.version>1.4.187</h2.version>
    <dropwizard.version.db>0.8.2</dropwizard.version.db>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    <version.swagger>0.7.0</version.swagger>
