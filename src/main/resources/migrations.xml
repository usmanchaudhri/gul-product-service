<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="7" author="uc">
        <comment>make product table and column names start lowercase</comment>
        <createSequence sequenceName="product_id_seq"/>
        <createTable tableName="product">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="sku" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
			<column name="shortDesc" type="varchar(255)">
				<constraints nullable="false" />
			</column>
			<column name="longDesc" type="varchar(255)"></column>
			<column name="imagePath" type="varchar(255)">
				<constraints nullable="false" />
			</column>
        </createTable>
    </changeSet>
</databaseChangeLog>
